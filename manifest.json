{
  "manifest_version": 3,
  "name": "Actuator Info Extractor",
  "version": "1.0",
  "description": "Extracts actuator information and generates an infobox table.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon.webp"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "icons": {
    "48": "icon.webp"
  }
}
